Bootstrap: docker
From: ubuntu:20.04

%post
    apt-get -y update
    DEBIAN_FRONTEND=noninteractive TZ=Etc/UTC apt-get -y install tzdata
    apt-get -y install build-essential cmake ninja-build sysbench 

%environment
    export LC_ALL=C

%runscript
    cmake --version
    gcc --version
    g++ --version
    ninja --version
    sysbench --version
